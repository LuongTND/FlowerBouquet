<UserControl
    x:Class="WpfApp.UserControls.HomeControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="0,0,0,100" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock FontSize="50" Foreground="Yellow" Text="Welcome " />
            <TextBlock FontSize="50" Foreground="Yellow" Text="{Binding Customer.Email}" />
        </StackPanel>
    </Grid>
</UserControl>
